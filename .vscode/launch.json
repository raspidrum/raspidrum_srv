{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Srv debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "SRV_CFG_NAME": "dev",
        "SRV_LOG_LEVEL": "DEBUG"
      },
      "args": [], // Аргументы командной строки
      "buildFlags": ""
    },
    {
      "name": "Srv",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "SRV_CFG_NAME": "dev"
      },
      "args": [], // Аргументы командной строки
      "buildFlags": ""
    },
    {
      "name": "Srv RPi debug",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/opt/raspidrum/raspidrum",
      "port": 2345,
      "host": "${input:rpiHost}",
      "preLaunchTask": "srv: debug on RPi",
      "postDebugTask": "srv: stop debug on RPi"
    },
    {
      "name": "Srv RPi attach",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/opt/raspidrum/raspidrum",
      "port": 2345,
      "host": "${input:rpiHost}",
      "apiVersion": 2
    }
  ],
  "inputs": [
    {
      "id": "rpiHost",
      "description": "Raspberry Pi IP address",
      "default": "raspidrum-aabf.local",
      "type": "promptString"
      }
  ]
}